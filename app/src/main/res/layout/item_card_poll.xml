<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/video_item_search_padding"
    android:background="@android:color/holo_blue_dark"
    android:padding="5dp">

    <TextView
        android:id="@+id/cardPollTitle"
        android:layout_width="@dimen/video_item_grid_thumbnail_image_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="POLL: What is you preferred way to express generic things?"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/separator"
        android:layout_width="@dimen/video_item_grid_thumbnail_image_width"
        android:layout_height="1dp"
        android:layout_below="@+id/cardPollTitle"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_alignEnd="@id/cardPollTitle"
        android:layout_marginLeft="@dimen/video_item_search_padding"
        android:layout_marginRight="@dimen/video_item_search_padding"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/cardPollTotalVotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_alignEnd="@id/cardPollTitle"
        android:ellipsize="middle"
        android:singleLine="true"
        tools:text="Total votes: 100 000 000" />

    <TextView
        android:id="@+id/cardPollAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollTotalVotes"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Foo"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/cardPollVotes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollTotalVotes"
        android:layout_alignEnd="@id/cardPollTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/poll_votes"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/cardPollAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer1"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Bar"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/cardPollVotes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer1"
        android:layout_alignEnd="@id/cardPollTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/poll_votes"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/cardPollAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer2"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Lorem Ipsum"
        android:textSize="12sp"
        android:visibility="gone"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/cardPollVotes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer2"
        android:layout_alignEnd="@id/cardPollTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/poll_votes"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/cardPollAnswer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer3"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="DOLOR sit amet"
        android:visibility="gone"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/cardPollVotes4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer3"
        android:layout_alignEnd="@id/cardPollTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/poll_votes"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/cardPollAnswer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer4"
        android:layout_alignStart="@id/cardPollTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Toto"
        android:visibility="gone"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/cardPollVotes5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPollAnswer4"
        android:layout_alignEnd="@id/cardPollTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/poll_votes"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="HardcodedText,SmallSp" />

</RelativeLayout>